{
	"compilerOptions": {
		"target": "ES5",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "nodenext",
    "moduleResolution": "nodenext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true
	},
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
